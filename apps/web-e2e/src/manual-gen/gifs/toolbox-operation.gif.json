    {
      "type": "click",
      "target": "first:.wb-split",
      "label": "分屏",
      "wait": 1500,
      "optional": true
    },
    {
      "type": "keyHint",
      "key": "插入",
      "hint": "插入到画布",
      "duration": 1500
    },
    {
      "type": "click",
      "target": "first:.wb-insert-canvas",
      "label": "插入画布",
      "wait": 1500,
      "optional": true
    },
    {
      "type": "wait",
      "duration": 1000
    },
    {
      "type": "click",
      "target": "first:.wb-close",
      "label": "关闭",
      "wait": 1000,
      "optional": true
    }
  ]
